<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.JenkinsDaoMapper">
    <!-- 根据主键查询-->
    <select id="getAll" resultType="com.example.demo.entity.JenkinsEntity">
        select  *
        from jenkins
    </select>

    <!-- 根据主键查询-->
    <select id="getById" resultType="com.example.demo.entity.JenkinsEntity" parameterType="java.lang.Integer" >
        select  *
        from jenkins
        where id = #{id}
    </select>

    <update id="updateByObj" parameterType="com.example.demo.entity.JenkinsEntity" >
        update jenkins
        <set>
            <if test="jobCurrentName != null" >
                job_current_name = #{jobCurrentName},
            </if>
            <if test="tomcatInstanceName != null" >
                tomcat_instance_name = #{tomcatInstanceName},
            </if>
            <if test="jobPlace != null" >
                job_place = #{jobPlace},
            </if>
            <if test="warName != null" >
                war_name = #{warName},
            </if>
            <if test="deployType != null" >
                deploy_type = #{deployType},
            </if>
            <if test="packageWay != null" >
                package_way = #{packageWay},
            </if>
            <if test="deployBranch != null" >
                deploy_branch = #{deployBranch},
            </if>
        </set>
        where id = #{id}
    </update>

    <insert id="insert" parameterType="com.example.demo.entity.JenkinsEntity">
        insert into jenkins
        <set >
            <if test="jobCurrentName != null" >
                job_current_name = #{jobCurrentName},
            </if>
            <if test="tomcatInstanceName != null" >
                tomcat_instance_name = #{tomcatInstanceName},
            </if>
            <if test="jobPlace != null" >
                job_place = #{jobPlace},
            </if>
            <if test="warName != null" >
                war_name = #{warName},
            </if>
            <if test="deployType != null" >
                deploy_type = #{deployType},
            </if>
            <if test="packageWay != null" >
                package_way = #{packageWay},
            </if>
            <if test="deployBranch != null" >
                deploy_branch = #{deployBranch},
            </if>
        </set>
    </insert>

    <delete id="deleteById">
        delete from jenkins
        where id = #{id}
    </delete>
</mapper>